@ciudades = Array.new
@ciudades.push("Granada")
@ciudades.push("Madrid")
@ciudades.push("Barcelona")
@ciudades.push("Sevilla")
@ciudades.push("Valencia")
@ciudades.push("Zaragoza")
@ciudades.push("Vigo")



get '/precio/:videojuego/:tienda' do
    nvid = params['videojuego']
    nti = params['tienda']

    if @admin.comprobarTienda(nti) == false
        status 400
        cadena = { :error => "Ruta introducida incorrectamente!!!"}
        content_type 'application/json'
        cadena.to_json

    else
        cadena = { :info => "Empiece  disponibles son Granada, Madrid, Barcelona, Sevilla, Valencia, Vigo y Zaragoza"}
        status 200
        content_type 'application/json'
        cadena.to_json
    end
end
